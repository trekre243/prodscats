@model Product
<div class="row">
    <div class="col s12 center-align">
        <h3>Products | <a href="/categories">Categories</a></h3>
    </div>
</div>
<div class="row">
    <div class="col s6">
        <h3>New Product</h3>
        <form asp-action="CreateProduct" asp-controller="Home">
            <div class="input-field col s12">
                <input asp-for="Name" type="text">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Description" type="text">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Price" type="text">
                <label asp-for="Price"></label>
                <span asp-validation-for="Price"></span>
            </div>
            <div class="col s12">
                <button type="submit" class="waves-effect waves-light btn">Create</button>
            </div>
        </form>
    </div>
    <div class="col s6">
        <h3>Existing Products</h3>
        @foreach(var product in ViewBag.Products)
        {
            <h5><a href="/products/@product.ProductId">@product.Name</a></h5>
        }
    </div>
</div>