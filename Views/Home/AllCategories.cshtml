@model Category
<div class="row">
    <div class="col s12 center-align">
        <h3><a href="/products">Products</a> | Categories</h3>
    </div>
</div>
<div class="row">
    <div class="col s6">
        <h3>New Category</h3>
        <form asp-action="CreateCategory" asp-controller="Home">
            <div class="input-field col s12">
                <input asp-for="Name" type="text">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col s12">
                <button type="submit" class="waves-effect waves-light btn">Create</button>
            </div>
        </form>
    </div>
    <div class="col s6">
        <h3>Existing Categories</h3>
        @foreach(var category in ViewBag.Categories)
        {
            <h5><a href="/categories/@category.CategoryId">@category.Name</a></h5>
        }
    </div>
</div>